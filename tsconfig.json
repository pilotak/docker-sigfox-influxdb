{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "strict": true,
    "alwaysStrict": true,
    "composite": true,
    "resolveJsonModule": true
  },
  "include": ["src", "src/**/*.json"],
  "exclude": ["**/node_modules", "**/__tests__"]
}
